{
  "name": "foo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/foo/src",
  "targets": {
    "install": {
      "executor": "@nxlv/python:install",
      "options": {}
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "options": {
        "outputPath": "dist/packages/foo",
        "publish": false
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "python -m pytest",
        "cwd": "packages/foo"
      }
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "options": {
        "lintFilePatterns": ["src"]
      }
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "options": {
        "filePatterns": ["src/**/*.py"]
      }
    },
    "serve": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "python -c \"from foo import get_foo; print(get_foo())\"",
        "cwd": "packages/foo"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "uv-sync": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv sync",
        "cwd": "packages/foo"
      }
    },
    "uv-add": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv add",
        "cwd": "packages/foo"
      }
    },
    "uv-run": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run",
        "cwd": "packages/foo"
      }
    }
  },
  "tags": ["python", "library"]
}
