{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "daemon": false,
  "plugins": [
    {
      "plugin": "@nxlv/python",
      "options": {
        "pyprojectTomlPaths": [
          "packages/*/pyproject.toml"
        ]
      }
    }
  ],
  "targetDefaults": {
    "build": {
      "cache": true
    },
    "test": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "install": {
      "cache": true
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/pyproject.toml",
      "{workspaceRoot}/validate-deps.js",
      "{workspaceRoot}/validate-deps.sh"
    ]
  }
}